{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "files": {
    "ignore": ["node_modules/**", "dist/**", "worker-configuration.d.ts"],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "ignore": ["node_modules/**", "dist/**", "worker-configuration.d.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "rules": {
      "a11y": { "recommended": true },
      "complexity": { "recommended": true },
      "correctness": { "recommended": true },
      "nursery": { "recommended": true },
      "performance": { "recommended": true },
      "security": { "recommended": true },
      "style": { "recommended": true },
      "suspicious": { "recommended": true }
    },
    "ignore": ["node_modules/**", "dist/**", ".astro/**", ".vscode/**", ".vite-inspect", "worker-configuration.d.ts"]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "lineEnding": "lf",
      "quoteStyle": "double"
    }
  },
  "json": {
    "parser": { "allowComments": true },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120
    }
  },
  "overrides": [
    {
      "include": ["*.svelte", "*.astro", "*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    },
    { "include": ["*.svg"] },
    { "include": ["*.astro"] },

    {
      "include": [".*", "*.json", "*.md", "*.toml", "*.yml"],
      "formatter": { "indentStyle": "space" }
    },
    { "include": ["*.md", "*.mdx"], "formatter": { "lineWidth": 120 } }
  ]
}
